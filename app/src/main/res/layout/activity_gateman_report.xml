<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_marginTop="0px"
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        style="@style/Toolbar.TitleText"
        android:background="#ffff"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:background="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:drawableLeft="@drawable/kr_logo"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="20dp"
            android:text="Konkan Railway Corporation Limited\n(A Government of India Undertaking)"
            android:id="@+id/toolbar_text"/>
    </androidx.appcompat.widget.Toolbar>

    <TableLayout
        android:id="@+id/tbl_content"
        android:background="@drawable/border"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolBar">

        <TableRow android:layout_margin="5dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Station Master ID"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_column="1"
                android:background="@drawable/border"/>
            <TextView
                android:id="@+id/sm_id"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Station Master ID"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:layout_column="1"
                android:background="@drawable/border"/>
        </TableRow>

        <TableRow android:layout_margin="5dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Station Master PN"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_column="1"
                android:background="@drawable/border"/>
            <TextView
                android:id="@+id/sm_pn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Station Master PN"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:layout_column="1"
                android:background="@drawable/border"/>
        </TableRow>

        <TableRow android:layout_margin="5dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Station Master PN Time"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_column="1"
                android:background="@drawable/border"/>
            <TextView
                android:id="@+id/sm_pn_time"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Station Master PN Time"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:layout_column="1"
                android:background="@drawable/border"/>
        </TableRow>

        <TableRow android:layout_margin="5dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Gate Man ID"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_column="1"
                android:background="@drawable/border"/>
            <TextView
                android:id="@+id/gm_id"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Gate Man ID"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:layout_column="1"
                android:background="@drawable/border"/>
        </TableRow>

        <TableRow android:layout_margin="5dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Gate Man PN"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_column="1"
                android:background="@drawable/border"/>
            <TextView
                android:id="@+id/gm_pn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Gate Man PN"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:layout_column="1"
                android:background="@drawable/border"/>
        </TableRow>

        <TableRow android:layout_margin="5dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Gate Man PN Time"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_column="1"
                android:background="@drawable/border"/>
            <TextView
                android:id="@+id/gm_pn_time"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Gate Man PN Time"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:layout_column="1"
                android:background="@drawable/border"/>
        </TableRow>

        <TableRow android:layout_margin="5dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Gate Close Time"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_column="1"
                android:background="@drawable/border"/>
            <TextView
                android:id="@+id/gate_close_time"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Gate Close Time"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:layout_column="1"
                android:background="@drawable/border"/>
        </TableRow>

        <TableRow android:layout_margin="5dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Train Number"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_column="1"
                android:background="@drawable/border"/>
            <TextView
                android:id="@+id/train_no"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Train Number"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:layout_column="1"
                android:background="@drawable/border"/>
        </TableRow>

        <TableRow android:layout_margin="5dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Train Pass Time"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_column="1"
                android:background="@drawable/border"/>
            <TextView
                android:id="@+id/train_pass_time"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Train Pass Time"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:layout_column="1"
                android:background="@drawable/border"/>
        </TableRow>
    </TableLayout>

    <Button
        android:layout_below="@+id/tbl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_btn_ack"
        android:id="@+id/btn_final_ack"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Commit"/>

</RelativeLayout>